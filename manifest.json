{
  "manifest_version": 3,
  "name": "Idea-lista",
  "version": "2.0",
  "description": "Idea-lista: Professional property analyzer with automatic scoring and comparison system",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://www.idealista.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.idealista.com/inmueble/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Property Manager",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
